<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ImageButton.CircleButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/dp_40</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="ImageButton.ToolBarActionButton" parent="ImageButton.CircleButton">
        <item name="android:layout_margin">@dimen/dp_8</item>
    </style>

    <style name="TextView.Toolbar.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BottomNavigationViewItem">
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

    <style name="TextView.Default" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextView.H1" parent="TextView.Default">
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextView.H2" parent="TextView.Default">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextView.H3" parent="TextView.Default">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TextView.Small" parent="TextView.Default">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="MaterialButton.Default" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">@dimen/dp_0</item>
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="android:insetRight">@dimen/dp_0</item>
        <item name="android:insetBottom">@dimen/dp_0</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="elevation">@dimen/dp_0</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="iconTint">@color/text_color_primary</item>
        <item name="cornerRadius">@dimen/dp_12</item>
        <item name="backgroundTint">@color/button_background_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="MaterialButton.Onboarding" parent="MaterialButton.Default">
        <item name="android:textColor">@color/button_onboarding_text_color</item>
        <item name="strokeColor">@color/stroke_color_primary</item>
        <item name="strokeWidth">@dimen/dp_1</item>
        <item name="android:backgroundTint">@color/button_onboarding_background_color</item>
    </style>

    <style name="EditText.InputFormMultiLine" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:maxLines">5</item>
        <item name="backgroundTint">@color/background_primary</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <style name="EditText.InputForm" parent="EditText.InputFormMultiLine">
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextInputLayout.InputForm" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/text_color_hint_primary</item>
        <item name="boxStrokeColor">@color/button_tint_primary</item>
        <item name="android:textColorHint">@color/text_color_hint_primary</item>
    </style>

    <!--This style needs for apply to hint in TextInputLayout -->
    <style name="TextInputLayout.TextForm" parent="TextInputLayout.InputForm" />

    <style name="TextInputLayout.HintAppearance" parent="TextInputLayout.InputForm">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="hintTextColor">@color/text_color_primary</item>
    </style>

    <style name="Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:backgroundTint">@color/color_team_red</item>
        <item name="android:textColor">@color/color_team_red</item>
        <item name="cornerRadius">@dimen/dp_12</item>
        <item name="android:paddingTop">@dimen/dp_14</item>
        <item name="android:paddingBottom">@dimen/dp_14</item>
        <item name="boxBackgroundMode">none</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Button.Enter.Outlined" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_tint_secondary</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="rippleColor">@color/ripple_color_primary</item>
        <item name="strokeColor">@color/stroke_color_primary</item>
        <item name="strokeWidth">@dimen/dp_1</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="cornerRadius">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_14</item>
        <item name="android:paddingBottom">@dimen/dp_14</item>
        <item name="boxBackgroundMode">none</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TopMenuAnimation">
        <item name="android:windowEnterAnimation">@anim/expand_popup_layout</item>
        <item name="android:windowExitAnimation">@anim/collapse_popup_layout</item>
    </style>

</resources>