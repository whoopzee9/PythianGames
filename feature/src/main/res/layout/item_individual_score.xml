<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_14"
    app:strokeColor="@color/color_team_green"
    app:strokeWidth="@dimen/dp_1">

    <LinearLayout
        android:id="@+id/item_individual_score__wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_individual_score__iv_icon"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/character_1"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"/>

        <TextView
            android:id="@+id/item_individual_score__tv_name"
            style="@style/TextView.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="@string/coins" />

        <TextView
            android:id="@+id/item_individual_score__tv_coins"
            style="@style/TextView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_gravity="center_vertical"
            android:text="@string/coins" />

        <TextView
            android:id="@+id/item_individual_score__tv_coins_value_in_yellow"
            style="@style/TextView.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/text_color_primary" />

        <TextView
            android:id="@+id/item_individual_score__tv_questions"
            style="@style/TextView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_gravity="center_vertical"
            android:text="@string/questions" />

        <TextView
            android:id="@+id/item_individual_score__tv_questions_value_in_yellow"
            style="@style/TextView.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/text_color_primary" />

        <TextView
            android:id="@+id/item_individual_score__tv_equals"
            style="@style/TextView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            android:text="@string/equals_sign"
            android:textAlignment="center"
            android:textColor="@color/text_color_primary" />

        <TextView
            android:id="@+id/item_individual_score__tv_result_score"
            style="@style/TextView.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/text_color_primary" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>