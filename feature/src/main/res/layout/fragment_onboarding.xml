<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/frg_onboarding__iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cleaning_196"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/frg_onboarding__tv_title"/>

    <TextView
        android:id="@+id/frg_onboarding__tv_title"
        style="@style/TextView.H1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:textSize="@dimen/sp_28"
        android:text="@string/onboarding_excavations_title"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/frg_onboarding__tv_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/frg_onboarding__tv_description"
        style="@style/TextView.H2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_56"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/onboarding_excavations_description"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/frg_onboarding__view_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/frg_onboarding__view_1"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_4"
        android:background="@drawable/background_dot"
        app:layout_constraintBottom_toBottomOf="@id/frg_onboarding__view_2"
        app:layout_constraintEnd_toStartOf="@id/frg_onboarding__view_2"
        app:layout_constraintTop_toTopOf="@id/frg_onboarding__view_2" />

    <View
        android:id="@+id/frg_onboarding__view_2"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_28"
        android:background="@drawable/background_dot"
        app:layout_constraintBottom_toTopOf="@id/frg_onboarding__mb_next"
        app:layout_constraintEnd_toEndOf="@id/frg_onboarding__mb_next"
        app:layout_constraintStart_toStartOf="@id/frg_onboarding__mb_next" />

    <View
        android:id="@+id/frg_onboarding__view_3"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_4"
        android:background="@drawable/background_dot"
        android:backgroundTint="@color/button_tint_primary"
        app:layout_constraintBottom_toBottomOf="@id/frg_onboarding__view_2"
        app:layout_constraintStart_toEndOf="@id/frg_onboarding__view_2"
        app:layout_constraintTop_toTopOf="@id/frg_onboarding__view_2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/frg_onboarding__mb_next"
        style="@style/MaterialButton.Onboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_80"
        android:text="@string/next"
        app:elevation="@dimen/dp_0"
        android:elevation="@dimen/dp_0"
        android:checkable="true"
        android:paddingHorizontal="@dimen/dp_40"
        android:paddingVertical="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>