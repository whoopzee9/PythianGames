<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_14"
    app:strokeColor="@color/color_team_green"
    app:strokeWidth="@dimen/dp_1">

    <LinearLayout
        android:id="@+id/include_team_statistics__wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/include_team_statistics__tv_team_stats_coins"
            style="@style/TextView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="@string/coins" />

        <ImageView
            android:id="@+id/include_team_statistics__iv_coin"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/ic_coin_24"
            android:tintMode="multiply"
            app:tint="@color/color_layer_yellow" />

        <TextView
            android:id="@+id/include_team_statistics__tv_team_stats_coins_value_in_yellow"
            style="@style/TextView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:elevation="@dimen/dp_10"
            android:text="0"
            android:textColor="@color/text_color_primary" />

        <TextView
            android:id="@+id/include_team_statistics__tv_team_stats_questions"
            style="@style/TextView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="@string/questions" />

        <ImageView
            android:id="@+id/include_team_statistics__iv_question"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/ic_first_layer_36" />

        <TextView
            android:id="@+id/include_team_statistics__tv_team_stats_questions_value_in_yellow"
            style="@style/TextView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/text_color_primary" />

        <TextView
            android:id="@+id/include_team_statistics__tv_team_stats_inventory"
            style="@style/TextView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="@string/inventory" />

        <TextView
            android:id="@+id/include_team_statistics__tv_team_stats_inventory_value"
            style="@style/TextView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:text="00"
            android:textAlignment="center" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>